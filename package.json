  },
  "homepage": "https://github.com/acidicX/FavePlace#readme",
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.0",
    "conventional-github-releaser": "^3.1.3",
    "dotenv-safe": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "scriptlint": "^2.0.5",
    "semver-diff": "^3.1.1",
    "semver-regex": "^3.1.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "yargs": "^15.3.1"
