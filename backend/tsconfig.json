{
  "compileOnSave": false,
  "compilerOptions": {
      "noImplicitAny": false,
      "allowJs": false,
      "lib": ["es5", "es6", "es2017", "es2018"],
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
